{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./output",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "strictNullChecks": false,
    "target": "ES2019",
    "useUnknownInCatchVariables": true
  }
}